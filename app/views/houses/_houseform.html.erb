<%= form_with model: @house, html: {class: "form-group"} do |f| %>
  <div class="row">
    <div class="col-2">
    <%= f.label :number %>
    <%= f.text_field :number, class: "form-control" %>
    </div>
    <div class="col-2">
    <%= f.label :address %>
    <%= f.text_field :address, class: "form-control" %>
    </div>
    <div class="col-4">
    <%= f.label :route %>
    <%= f.text_field :route, class: "form-control" %>
    </div>
    <div class="col-2">
    <%= f.label :status %>
    <%= f.text_field :status, class: "form-control" %>
    </div>
    <div class="col-2 align-self-end">
    <%= f.submit "Submit", class: "btn btn-dark" %>
    </div>
  </div>
<% end %>
